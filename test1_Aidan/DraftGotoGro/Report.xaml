<Page x:Class="DraftGotoGro.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="RefundPage" 
      Background="White" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="From: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="FromDate" />
                <TextBlock Text="To: " VerticalAlignment="Center" Margin="20,0,10,0"/>
                <DatePicker x:Name="ToDate" />
            </StackPanel>

            <Button Content="Member Report" Width="150" Height="40" Click="MemberReportButton_Click" Margin="0,0,0,10"/>
            <Button Content="Sale Report" Width="150" Height="40" Click="SaleReportButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
