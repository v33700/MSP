<Window x:Class="DraftGotoGro.SaleDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SaleDetailsWindow" Height="300" Width="400"
        Background="White">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="OrderNumberTextBlock" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10"/>
            <TextBlock x:Name="MemberIdTextBlock" FontSize="14" TextAlignment="Center" Margin="10"/>
            <ListView x:Name="ItemsListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Item Name" DisplayMemberBinding="{Binding ItemName}" Width="120"/>
                        <GridViewColumn Header="Item Quantity" DisplayMemberBinding="{Binding ItemQty}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
